@model IEnumerable<VehicleRentalSystem.Models.Vehicle>

@{
    ViewBag.Title = "Index";
}

<div>
        <h2>Welcome!</h2>
    <h5>Here's a list of all Vehicles</h5>
    <div class="container">
        <div class="row row-cols-2">

            @foreach (var item in Model)
            {

                <div class="col-md-3">
                    <div class="card border-dark mb-3">
                        <img src="https://images.unsplash.com/photo-1605559424843-9e4c228bf1c2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OXx8Y2Fyc3xlbnwwfHwwfHx8MA%3D%3D&w=1000&q=80
             " height="200" width="100" class="card-img-top" alt="...">
                        <div class="card-body text-dark">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Details</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Model : @item.Model</li>
                            <li class="list-group-item">Year of Make: @item.RegistrationYear</li>
                            <li class="list-group-item">Rent per day: @item.Tariff</li>
                        </ul>
                        @using (Html.BeginForm("SearchAvailability", "Vehicles", FormMethod.Post))
                        {
                            <div class="card-body">
                                <button type="submit" name="id" id="id" value="@item.Id" class="btn-primary">Check</button>
                            </div>
                        }
                    </div>
                </div>

            }
        </div>
    </div>
</div>

