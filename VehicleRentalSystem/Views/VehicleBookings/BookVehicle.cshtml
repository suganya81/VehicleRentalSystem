@model VehicleRentalSystem.Models.VehicleBooking

@{
    ViewBag.Title = "Create";
}

<h5>Complete your booking</h5>

@using (Html.BeginForm("AddBooking", "VehicleBookings", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.VehicleId, "Vehicle Chosen", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.DropDownList("VehicleId", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.VehicleId, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", @style = "display: none" } })
            @Html.EditorFor(model => model.VehicleId, new { htmlAttributes = new { @class = "form-control", @style = "display: none" } })
            @Html.EditorFor(model => model.VehicleAvailabilityId, new { htmlAttributes = new { @class = "form-control", @style = "display: none" } })

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.AmountToBePaid, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AmountToBePaid, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.AmountToBePaid, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.AdditionalCharges, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AdditionalCharges, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.AdditionalCharges, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.PaymentMode, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PaymentMode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PaymentMode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.AdvancePaid, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AdvancePaid, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AdvancePaid, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
                <div class="btn btn-success">
                    <input type="submit" value="Book" class="btn btn-default" />
                </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Vehicles")
</div>
